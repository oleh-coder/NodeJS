{{#if message}}
    <h1>{{message}}</h1>
{{else}}
    <h1>Форма реєстрації</h1>
{{/if}}

<div class="container">
    <div class="form">
        <form action="/reg" method="post">
            <div class="form-group">
                <input type="text" name="name" class="form-control" placeholder="Введіть Ім'я" required>
            </div>
            <div class="form-group">
                <input type="email" name="email" class="form-control" aria-describedby="emailHelp" placeholder="Введіть свій Email" required>
            </div>
            <div class="form-group">
                <input type="password" name="pas" class="form-control" placeholder="Введіть пароль" required>
            </div>
            <button type="submit" class="btn btn-primary">Реестрація</button>
        </form>
    </div>

    {{#if msg}}
        <div class="msg-error">{{msg}} <a href="/">Вхід в систему тут...</a></div>
    {{/if}}

</div>